@page "/predictions"
@using Services
@using Models
@inject IPredictionService Service

@if (predictions == null)
{
    <p><em>Loading predictions...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>CompanyId</th>
                <th>Date</th>
                <th>LowPrice</th>
                <th>HighPrice</th>
                <th>OpenPrice</th>
                <th>ClosePrice</th>
                <th>Volume</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var prediction in predictions)
            {
                <tr>
                    <td>@prediction.CompanyId</td>
                    <td>@prediction.Date</td>
                    <td>@prediction.LowPrice</td>
                    <td>@prediction.HighPrice</td>
                    <td>@prediction.OpenPrice</td>
                    <td>@prediction.ClosePrice</td>
                    <td>@prediction.Volume</td>

                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Prediction> predictions;

    protected override async Task OnInitializedAsync()
    {
        predictions = await Service.GetPredictions();
    }


}
