@page "/Login"
@using Models
<h1>Login</h1>
<EditForm Model="@user" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group ">
        <label class="label-text">Email :</label>
        <div>
            <InputText @bind-Value="@user.Email" class="form-control col-sm-5" />
            <ValidationMessage For="@(() => user.Email)" />
        </div>
    </div>
    <div class="form-group">
        <label class="label-text">Password :</label>
        <div>
            <InputText type="password" @bind-Value="@user.Password" class="form-control col-sm-5" />
            <ValidationMessage For="@(() => user.Password)" />
        </div>
    </div>

    <button id="login-btn" type="submit" class="btn btn-primary">
        @ButtonText
    </button>
</EditForm>

@code {

    public UserLogin user = new UserLogin();

    public string ButtonText { get; set; } = "Let's go";

    public EventCallback OnValidSubmit { get; set; }



}

<style>
    h1 {
        color: navajowhite;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        font-size: 100px;
        align-self: center;
        margin-top: 0px;
    }

    .login-body {
        display: flex;
        align-content: center;
        justify-content: center;
        align-items: center;
        margin: 0px;
    }

    .label-text {
        font-size: 30px;
        color: lightgoldenrodyellow
    }

    .form-control {
        height: 40px;
        max-width: 100% !important;
        width: 300px;
        border-radius: 25px;
    }

    #login-btn {
        display: inline-block;
        border-radius: 4px;
        background-color: #f4511e;
        border: none;
        color: #FFFFFF;
        text-align: center;
        font-size: 28px;
        margin-top: 30px;
        width: 200px;
        height: 45px;
        transition: all 0.5s;
        cursor: pointer;
    }
</style>
